@page
@model QuanLyCuaHang.Pages.MH_ThongKe_HetHanSuDungModel
@using QuanLyCuaHang.Entities
@{
}

<h1>Thống kê Hàng "Hết hạn sử dụng"</h1>
<br />
<div>Hôm nay là ngày: <b>@Model.toDay.ToShortDateString()</b></div>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>STT</th>
            <th>Mã Mặt Hàng</th>
            <th>Tên Mặt Hàng</th>
            <th>Hạn Sử Dụng</th>
            <th>Tình trạng</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.dsMH.Count; i++)
        {
            <tr>
                <td>#@(i + 1)</td>
                <td>@Model.dsMH[i].MaMatHang</td>
                <td>@Model.dsMH[i].TenMatHang</td>
                <td>@Model.dsMH[i].HanSuDung.ToShortDateString()</td>

                @if (Model.tinhTrangMH[i])
                {
                    <td class="text-danger">Đã hết HSD</td>
                }
                else
                {
                    <td class="text-success">Còn HSD</td>
                }

            </tr>
        }
    </tbody>
</table>