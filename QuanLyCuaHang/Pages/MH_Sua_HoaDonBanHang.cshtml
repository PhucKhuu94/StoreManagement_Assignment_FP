@page
@model QuanLyCuaHang.Pages.MH_Sua_HoaDonBanHangModel
@{
}

<h1>Sửa thông tin Hóa Đơn - Bán Hàng</h1>
<br />
@if (Model.coDuLieu)
{
    <form method="post">
        <div class="row my-3">
            <div class="col-4">
                <label for="TenMH">Tên Mặt Hàng</label> <br />
                <select class="form-control" name="TenMH">
                    <option value="@Model.hoaDon.TenMatHang">@Model.hoaDon.TenMatHang</option>
                    @foreach (string tenMH in Model.dsTenMH)
                    {
                        <option value="@tenMH">@tenMH</option>
                    }
                </select>
            </div>
        </div>

        <div class="row my-3">
            <div class="col-4">
                <label for="SoLuong">Số lượng</label> <br />
                <input type="text" name="SoLuong" id="SoLuong" value="@Model.hoaDon.SoLuong" class="form-control" />
            </div>
        </div>

        <div class="row my-3">
            <div class="col-4">
                <label for="NgayTao">Ngày tạo</label> <br />
                <input type="date" name="NgayTao" id="NgayTao" value="@Model.hoaDon.NgayTao.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
        </div>

        <br />

        <button type="submit" class="btn btn-success">Xác nhận</button>
        <a href="/MH_DanhSach_HoaDonBanHang" class="btn btn-dark">Hủy</a>
    </form>
}
else
{
    <div style="color: red;">@Model.Chuoi</div>
}